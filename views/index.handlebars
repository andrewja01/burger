<div class="container-fluid">
    <div class="container">
        <div class="jumbotron p-3" style="background:#3489cf !important">
            <div class="row align-items-center">
                <div class="col-5">
                    <img class="rounded" src="assets/images/kp.png" alt="krabby patty" width="350px">
                </div>

                <div class="col-7">
                    <h1 class="text-align-center display-3">
                        <strong>EAT-DA-BURGER!</strong>
                    </h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-2">
            </div>
            <div class="col-5">
                <h2>Menu</h2>
                <br> {{#each burger}} 
                        {{#unless devoured}}
                            <h6>{{burger_name}}
                                <span>
                                    <button class="devour_bg btn btn-primary btn-sm" data-id="{{id}}">Devour</button>
                                </span>
                            </h6>
                        {{/unless}} 
                    {{/each}}
            </div>

            <div class="col-5">
                <h2>Devoured</h2>
                <br> {{#each burger}} 
                        {{#if devoured}}
                            <h6>{{burger_name}}</h6>
                        {{/if}} 
                    {{/each}}
            </div>
        </div>

        <hr>
        <br>

    <div class="col-11 d-flex justify-content-center">
        <h2>Add a Burger</h2>
    </div>
    <br>
        <div class="col-12 d-flex justify-content-center"
        <br>
        <form class="create-form">

            <div class="form-group">
                <label for="burgs"><h6>Burger Name</h6></label>
                <input type="text" id="brgr" name="burger">
            </div>

            <button class="btn btn-primary btn-lg" type="submit">Add Burger</button>

        </form>
        </div>

    </div>
</div>