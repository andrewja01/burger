<h1>Eat-Da-Burger!</h1>

<ul id="List">
    {{#each burger}} 
        {{#unless devoured}}
            <li><p>{{id}} {{burger_name}}
            <button class="devour_bg" data-id="{{id}}">Devour</button>
            </p></li>
        {{/unless}}
    {{/each}}
</ul>

<hr>
<br>

<h2>Devoured</h2>
<ul id="devList">
    {{#each burger}}
        {{#if devoured}}
        <li><p>{{id}} {{burger_name}}</p></li>
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>


<form class="create-form">

    <div class="form-group">
        <input type="text" id="brgr" name="burger">
    </div>

    <br>

    <button type="submit">Add Burger</button>
</form>