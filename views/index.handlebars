<div class="container">

    <div class="jumbotron">
        <h1 class="text-center display-4">EAT-DA-BURGER!</h1>

    </div>
    <div class="row">
        <div class="col-6">
             <h2>Menu</h2>
             <br>
                {{#each burger}} {{#unless devoured}}
                <h6>{{id}} {{burger_name}}
                <span>
                    <button class="devour_bg btn btn-primary btn-sm" data-id="{{id}}">Devour</button>
                </span>
                </h6>
                {{/unless}} {{/each}}
        </div>

        <div class="col-6">
            <h2>Devoured</h2>
            <br>
                {{#each burger}} {{#if devoured}}
                <h6>{{id}} {{burger_name}}</h6>
                {{/if}} {{/each}}
        </div>
    </div>  

    <hr>
    <br>

    <h2>Add a Burger</h2>


    <form class="create-form">

        <div class="form-group">
            <label for="burgs">Burger Name</label>
            <input type="text" id="brgr" name="burger">
        </div>

        <br>

        <button class="btn btn-primary btn-lg" type="submit">Add Burger</button>

    </form>

</div>